# .env.example
# Copier ce fichier vers .env et remplir avec vos vraies valeurs

# Configuration du serveur
PORT=3002
NODE_ENV=development

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/playgreenkids

# JWT Secret (utilisez une clé forte en production)
JWT_SECRET=votre_secret_jwt_super_securise_changez_moi_en_production

# Configuration optionnelle
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Configuration CORS (optionnel)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logs (optionnel)
LOG_LEVEL=info